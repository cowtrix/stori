@model Stori.Data.StoriNode

@{
	ViewData["Title"] = "Delete Choice";
	const string contentclass = "choice-content-text";
	const string actionclass = "choice-action-text";
	const string pclass = "choice-content-text";
}

<div class="row">
	<div class="col">
		<h2>Delete Choice</h2>
	</div>
	<div class="col-auto">
		<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#rulesfaqmodal">
			Rules & FAQ
		</button>
	</div>
	<!-- Modal -->
	<div class="modal fade" id="rulesfaqmodal" tabindex="-1" role="dialog" aria-labelledby="rulesfaqmodalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Rules & FAQ</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<partial name="../Shared/FAQPartial.cshtml" />
				</div>
			</div>
		</div>
	</div>
</div>
<hr />
<div class="row">
	<div class="col">
		<div class="card card-action">
			<div class="card-body row">
				<div class="col">
					@Html.Raw(Stori.Data.StoriNode.MDToHTML(Model.Action, actionclass))
				</div>
				<div class="col-auto">
					<div class="row choice-votes" data-toggle="tooltip" data-placement="bottom" title="Views">
						<i class="fa fa-eye padded-icon"></i><span class="badge badge-primary badge-pill">@Model.Votes</span>
					</div>
					<div class="row" data-toggle="tooltip" data-placement="bottom" title="Sub-Stories">
						<i class="fa fa-bookmark padded-icon"></i><span class="badge badge-primary badge-pill">@controller.GetSubDocumentCount(Model.ID)</span>
					</div>
				</div>
			</div>
		</div>
		<div class="card">
			<div class="card-body row">
				<div class="col">
					@Html.Raw(Stori.Data.StoriNode.MDToHTML(Model.Content, contentclass))
				</div>
			</div>
		</div>
		<div class="card-seperator text-center">
			<i class="fas fa-ellipsis-v"></i>
		</div>
		<form asp-action="ConfirmDelete">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="ID" />
			<div class="form-group">
				<input type="submit" value="Delete" class="btn btn-primary btn-block" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
